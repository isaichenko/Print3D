<h1>New Article</h1>
<%= form_with scope: :article, url: articles_path, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>

  <p>
    <%= form.submit "Сохранить", class: "btn btn-primary" %>
  </p>
<% end %>

<%= link_to 'Назад', articles_path, class: "btn btn-primary" %>
